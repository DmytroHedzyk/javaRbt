<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <import resource="t1000_context.xml"/>

    <bean class="ru.javabegin.training.spring2.main.MyBeanPostProcessor"/>

    <bean id="t1000Conveyor" class="ru.javabegin.training.spring2.impls.conveyor.T1000Conveyor">
        <lookup-method name="createRobot" bean="t1000"/>
    </bean>

    <bean id="t1000Replaced" class="ru.javabegin.training.spring2.impls.robot.ModelT1000" parent="t1000">
        <replaced-method name="action" replacer="t1000Replacer"/>
    </bean>

    <bean id="t1000Replacer" class="ru.javabegin.training.spring2.impls.robot.ModelT1000Replacer"/>

    <bean id="t1000Pool" class="ru.javabegin.training.spring2.impls.pool.T1000Pool">
        <property name="robotCollection">
            <list>

                <ref bean="t1000"/>

                <bean class="ru.javabegin.training.spring2.impls.robot.ModelT1000" parent="baseModel"
                      scope="prototype">
                    <constructor-arg value="gold" index="3" type="java.lang.String"/>
                    <constructor-arg value="2007" index="4" type="int"/>
                    <constructor-arg value="false" index="5" type="boolean"/>
                </bean>

            </list>
        </property>
    </bean>

    <bean id="t1000Map" class="ru.javabegin.training.spring2.impls.pool.T1000Map">
        <constructor-arg name="robotMap">
            <map>
                <entry key="2007" value-ref="t1000"/>
                <entry key="2008" value-ref="t1000Replaced"/>
            </map>
        </constructor-arg>
    </bean>

</beans>