<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:p="http://www.springframework.org/schema/p"
       xmlns:c="http://www.springframework.org/schema/c"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd"
       default-lazy-init="true">


    <import resource="sony_context.xml"/>
    <import resource="toshiba_context.xml"/>

    <bean id="t1000" class="ru.javabegin.training.spring2.impls.robot.ModelT1000"
          p:hand-ref="sonyHand" p:leg-ref="sonyLeg" p:head-ref="sonyHead">
        <constructor-arg index="0" value="silver" type="java.lang.String"/>
        <constructor-arg index="1" value="2005" type="int"/>
        <constructor-arg index="2" value="true" type="boolean"/>

    </bean>


</beans>